<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" >

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:padding="10dip" >

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:paddingBottom="30dp"
				android:textStyle="bold"
				android:textSize="20dp"
				android:textAlignment="center"
				android:text="Data Penerima Barang" />

			<!--  Name Label -->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:text="Nama" />
			<!--  Name TextField -->
			<EditText
				android:id="@+id/nama"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000" />

			<!--  Name Label -->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Alamat"
				android:textColor="#000000" />
			<!--  Name TextField -->
			<EditText
				android:id="@+id/alamat"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000" />

			<!--  Name Label -->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Telpon/Handphone"
				android:textColor="#000000" />
			<!--  Name TextField -->
			<EditText
				android:id="@+id/telpon"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:textColor="#000000" />

			 <TextView
				 android:layout_width="fill_parent"
				 android:layout_height="wrap_content"
				 android:text="Provinsi"
				 android:textColor="#000000" />

			<!--  Name TextField -->
			  <Spinner android:id="@+id/spinProp"
			android:layout_width="fill_parent"
			android:textColor="#000000"
			android:layout_height="wrap_content"/>

			 <TextView
				 android:layout_width="fill_parent"
				 android:layout_height="wrap_content"
				 android:text="Kabupaten"
				 android:textColor="#000000" />

			  <Spinner android:id="@+id/spinKab"
			android:layout_width="fill_parent"
			android:textColor="#000000"
			android:layout_height="wrap_content"/>

			<Button
				android:id="@+id/proses"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="40dip"
				android:textColor="#000000"
				android:textStyle="bold"
				android:text="Simpan" />

			<TextView android:id="@+id/TextSpin1"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				 android:visibility="gone"/>

				<TextView
				android:id="@+id/TextSpin2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:visibility="gone" />
		</LinearLayout>

	</ScrollView>
